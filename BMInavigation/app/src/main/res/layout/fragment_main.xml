<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<variable
    name="Testadat"
    type="com.example.bminavigation.Testadatok" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainF">

    <!-- TODO: Update blank fragment layout -->







        <TextView
            android:id="@+id/magassagText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Magasság:"

            app:layout_constraintBottom_toTopOf="@id/sulyText"
            app:layout_constraintEnd_toStartOf="@id/magassagInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"



            />

        <EditText
            android:id="@+id/magassagInput"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/magassagText"
            app:layout_constraintStart_toEndOf="@id/magassagText"
            />

        <TextView
            android:id="@+id/sulyText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Súly:"

            app:layout_constraintTop_toBottomOf="@id/magassagText"
            app:layout_constraintStart_toStartOf="@id/magassagText"
            app:layout_constraintEnd_toStartOf="@id/sulyInput"


            />

        <EditText
            android:id="@+id/sulyInput"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"

            app:layout_constraintEnd_toEndOf="@id/magassagInput"
            app:layout_constraintTop_toTopOf="@id/sulyText"
            app:layout_constraintStart_toEndOf="@id/sulyText"

            />




        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"


            />






</androidx.constraintlayout.widget.ConstraintLayout>

</layout>