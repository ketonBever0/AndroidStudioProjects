<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/cim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Átlag üzemanyagfogyasztás"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        />

    <LinearLayout
        android:id="@+id/tankoltBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/megtettBox"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/tankolt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Tankolt mennyiség: "

            />

        <EditText
            android:id="@+id/tankoltInput"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/megtettBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tankoltBox"

        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/megtett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Megtett km: "


            />

        <EditText
            android:id="@+id/megtettInput"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"

            />


    </LinearLayout>

    <TextView
        android:id="@+id/eredmeny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/megtettBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sendData"
        />


    <Button
        android:id="@+id/sendData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Send"
        />





</androidx.constraintlayout.widget.ConstraintLayout>