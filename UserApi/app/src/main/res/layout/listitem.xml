<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/listitem_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listitem_fName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/detail_text_margin"
        android:text="first"
        android:textSize="@dimen/detail_text_size"
        app:layout_constraintStart_toEndOf="@id/listitem_picture"
        app:layout_constraintTop_toTopOf="@id/listitem_picture" />

    <TextView
        android:id="@+id/detail_lName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/detail_text_margin"
        android:text="last"
        android:textSize="@dimen/detail_text_size"
        app:layout_constraintBottom_toBottomOf="@id/listitem_picture"
        app:layout_constraintStart_toEndOf="@id/listitem_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>